<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bbd.dao.system.ModuleDao">

    <!-- 系统模块Map -->
    <resultMap id="BaseResultMap" type="com.bbd.bean.system.ModuleInfo">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="resource" property="resource"/>
        <collection ofType="com.bbd.bean.system.ModuleInfo" property="children">
            <id column="cid" property="id"/>
            <result column="cname" property="name"/>
            <result column="cresource" property="resource"/>
        </collection>
    </resultMap>

    <resultMap id="UserModuleResult" type="com.bbd.bean.system.UserModulesVo">
        <id column="id" property="userId"/>
        <result column="area" property="area"/>
        <result column="username" property="userName"/>
        <collection property="moduleIds" ofType="java.lang.String">
            <id column="mid" property="id"/>
        </collection>
    </resultMap>


    <!-- 查询所有父模块与子模块 -->
    <select id="selectModuleInfos" resultMap="BaseResultMap">
		select
			m.id,
			m.`name`,
			c.id cid,
			c.name cname
		from bbd_module m
		left join bbd_module c on c.parent_id = m.id
		where m.parent_id is null
	</select>

    <!-- 查询所用户的模块 -->
    <select id="selectUserModuleInfos" resultMap="UserModuleResult">
		select 
		u.id,
		u.username,
		concat(ifnull(p.name,''), ifnull(c.name,''), ifnull(d.name,'')) as area,
		m.id mid
		from 
		bbd_user u
		left join bbd_user_module um on um.user_id = u.id
		left join bbd_module m on m.id = um.module_id
		left join bbd_province p on u.province = p.code
		left join bbd_city c on u.city = c.code
		left join bbd_district d on u.district = d.code
		where u.id = #{id}
	</select>

    <!-- 查询所有父模块与子模块 -->
    <select id="selectAllModuleInfos" resultType="com.bbd.bean.system.ModuleInfo">
		select
			m.id,
			m.`name`,
			m.resource
		from bbd_module m
	</select>

</mapper>